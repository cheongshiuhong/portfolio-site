{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "baseUrl": ".",
      "paths": {
        "@/data/*": ["src/data/*"],
        "@/components/*": ["src/components/*"],
        "@/styles/*": ["src/styles/*"],
        "@/interfaces/*": ["src/interfaces/*"],
      }
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx", "src/utils/mongodb.js"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  